<Window x:Class="biped.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Biped" Height="250" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Status Text -->
        <TextBlock x:Name="StatusText" 
                   Grid.Row="0" 
                   Text="Press a foot pedal to configure it!" 
                   TextAlignment="Center" 
                   HorizontalAlignment="Stretch"
                   TextWrapping="Wrap"
                   FontWeight="Bold" 
                   FontSize="14" 
                   Margin="10,0,10,15"/>

        <!-- Device Selector -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,20">
            <TextBlock Text="Connected pedals:" Margin="0,0,0,5"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="DeviceSelector" 
                          Grid.Column="0" 
                          SelectionChanged="DeviceSelector_SelectionChanged"/>

                <Button x:Name="ResetButton" 
                        Grid.Column="1" 
                        Content="Reset / Unbind" 
                        Margin="10,0,0,0" 
                        Padding="10,0"
                        Click="ResetButton_Click"/>
            </Grid>
        </StackPanel>



        <!-- The 3 Display Boxes (Visual Indicators) -->
        <!-- Using Borders allows us to control the background color perfectly from code -->
        <Grid Grid.Row="2" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Pedal Display -->
            <Border Grid.Column="0" BorderBrush="#333" BorderThickness="1" CornerRadius="3">
                <TextBlock x:Name="LeftText" 
                           Text="Left"
                           Padding="10"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Border>

            <!-- Middle Pedal Display -->
            <Border Grid.Column="2" BorderBrush="#333" BorderThickness="1" CornerRadius="3">
                <TextBlock x:Name="MiddleText" 
                           Text="Middle"
                           Padding="10"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Border>

            <!-- Right Pedal Display -->
            <Border Grid.Column="4" BorderBrush="#333" BorderThickness="1" CornerRadius="3">
                <TextBlock x:Name="RightText" 
                           Text="Right"
                           Padding="10"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="14"/>
            </Border>
        </Grid>

        <!-- Hint Footer -->
        <TextBlock Grid.Row="3" 
                   Text="Esc to cancel binding" 
                   Foreground="Gray" 
                   HorizontalAlignment="Center" 
                   FontSize="10" 
                   Margin="0,10,0,0"/>
    </Grid>
</Window>